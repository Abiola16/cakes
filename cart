<!-- 
   var quantity = 1;

   function addToCart() {
     var product = {
       name: "Product Name",
       price: 9.99,
       quantity: quantity
     };
   
     var cart = JSON.parse(localStorage.getItem("cart")) || [];
     cart.push(product);
     localStorage.setItem("cart", JSON.stringify(cart));
   }
   
   function increaseQuantity() {
     quantity++;
     document.getElementById("quantity").innerText = quantity;
   }
   
   function decreaseQuantity() {
     if (quantity > 1) {
       quantity--;
       document.getElementById("quantity").innerText = quantity;
     }
   } -->



   
<!-- function updateCart() {
    var cartContainer = document.getElementById("cartContainer");
    cartContainer.innerHTML = "";
  
    var cart = JSON.parse(localStorage.getItem("cart")) || [];
    var totalPrice = 0;
  
    for (var i = 0; i < cart.length; i++) {
      var product = cart[i];
      var cartItem = document.createElement("div");
      cartItem.className = "cart-item";
      var itemTotalPrice = product.price * product.quantity;
      totalPrice += itemTotalPrice;
  
      cartItem.innerHTML = `
        <img src="product-image.jpg" alt="Product Image">
        <p>${product.name} - $${product.price} x ${product.quantity} = $${itemTotalPrice.toFixed(2)}</p>
        <button class="delete-btn" onclick="deleteItem(${i})">Delete</button>
      `;
      cartContainer.appendChild(cartItem);
    }
  
    var totalPriceElement = document.createElement("p");
    totalPriceElement.innerHTML = `<strong>Total Price: $${totalPrice.toFixed(2)}</strong>`;
    cartContainer.appendChild(totalPriceElement);
  }
  
  function deleteItem(index) {
    var cart = JSON.parse(localStorage.getItem("cart")) || [];
    cart.splice(index, 1);
    localStorage.setItem("cart", JSON.stringify(cart));
    updateCart();
  }
  
  window.onload = updateCart;
   -->



